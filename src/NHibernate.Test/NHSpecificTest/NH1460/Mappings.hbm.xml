<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="NHibernate.Test"
                   namespace="NHibernate.Test.NHSpecificTest.NH1460">

  <class name="Item" table="tblitems" lazy="false">
    <id name="Id" column="ItemId">
      <generator class="guid.comb" />
    </id>

    <version name="Version" column="version"/>

    <property name="Name" column="itemname" />

    <bag name="ItemDetails" access="field.camelcase-underscore" fetch="join"
         lazy="false" inverse="true" cascade="all-delete-orphan">
      <key column="itemid" />
      <one-to-many class="ItemDetail"/>
    </bag>

  </class>

  <class name="ItemDetail" table="tblDetails" lazy="false">

    <composite-id>
      <key-many-to-one name="Owner" column="itemid" class="Item" lazy="false"/>
      <key-property name="Id" column="DetailId"/>      
    </composite-id>

    <version name="Version" column="version"/>

    <property name="Code" column="code"/>

  </class>

</hibernate-mapping>
